<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <org.srr.dev.view.CircleImageView
            android:id="@+id/cricle_out"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"/>

        <org.srr.dev.view.CircleImageView
            android:id="@+id/cricle_in"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="37dp"
            android:layout_alignTop="@id/cricle_out"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/btn_music_name"
            android:layout_width="70dp"
            android:layout_height="17dp"
            android:text="@string/song_name"
            android:textSize="14dp"
            android:layout_toRightOf="@id/cricle_out"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:ellipsize="marquee"
            android:textStyle="bold"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:singleLine="true"
            />

        <Button
            android:id="@+id/btn_modle"
            android:layout_width="34dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="42dp"
            android:layout_marginRight="20dp"
            android:text="模式"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:layout_toLeftOf="@id/btn_modle"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toLeftOf="@id/btn_next"
            android:layout_marginRight="18dp"
            android:layout_marginTop="30dp"
            android:text="开始"/>

        <Button
            android:id="@+id/btn_last"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:layout_toLeftOf="@id/btn_start"
            android:layout_marginRight="18dp"
            android:layout_marginTop="35dp"/>
    </RelativeLayout>
   
</RelativeLayout>