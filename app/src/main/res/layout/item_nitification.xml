<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/notifi_circle"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/notifi_music_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/notifi_circle"
        android:singleLine="true"
        android:text="歌名"

        />

    <TextView
        android:id="@+id/notifi_singer"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifi_music_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/notifi_circle"
        android:text="singer" />

    <TextView
        android:id="@+id/notifi_next"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:background="@mipmap/xys" />

    <ImageView
        android:id="@+id/notifi_start"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@id/notifi_next"
        android:src="@mipmap/bf_zt" />

    <TextView
        android:id="@+id/notifi_last"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@id/notifi_start"
        android:background="@mipmap/sys" />

</RelativeLayout>
