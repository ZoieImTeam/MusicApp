<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_bottom_black"
    >

    <org.srr.dev.view.CircleImageView
        android:id="@+id/notifi_circle"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/notifi_music_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/notifi_circle"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small_9"
        android:text="歌名"

        />

    <TextView
        android:id="@+id/notifi_singer"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifi_music_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/notifi_circle"
        android:textSize="@dimen/text_small_9"
        android:textColor="@color/white"
        android:text="singer" />

    <TextView
        android:id="@+id/notifi_next"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/xys" />

    <TextView
        android:id="@+id/notifi_start"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/notifi_next"
        android:layout_centerVertical="true"
        android:background="@mipmap/bf_zt" />

    <TextView
        android:id="@+id/notifi_last"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/notifi_start"
        android:background="@mipmap/sys" />

</RelativeLayout>
